<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#50A387"
    android:id="@+id/main_back"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.matteobattilana.weather.WeatherView
            android:id="@+id/weather_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HelloPlantname"
                    android:textSize="30dp"
                    android:text="ooo"
                    android:textColor="#E4E4A4">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/withday"
                    android:textSize="25dp"
                    android:text="(이)와 함께한지"
                    android:layout_toRightOf="@id/HelloPlantname">
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:id="@+id/sun"
                    android:background="#50A387"
                    android:layout_toRightOf="@id/withday"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day"
                    android:textSize="40dp"
                    android:text="32"
                    android:layout_below="@id/HelloPlantname">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dayinfomation"
                    android:textSize="30dp"
                    android:layout_margin="10dp"
                    android:text="일 🌱"
                    android:textColor="#E4E4A4"
                    android:layout_below="@id/HelloPlantname"
                    android:layout_toEndOf="@id/day">
                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/plant"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/eclipse_l"
                    android:background="@drawable/eclipse_l"
                />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notice"
                android:text="빛이 필요해요!\n태양을 클릭해주세요."
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangular"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="토양습도"
                            android:textSize="50px"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대기습도"
                            android:textSize="50px"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="온도"
                            android:textSize="50px"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="물통 양"
                            android:textSize="50px"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/soilHumidityView"
                            android:text="70%"
                            android:textSize="70px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65%"
                            android:id="@+id/airHumidityView"
                            android:textSize="70px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27℃"
                            android:id="@+id/temperatureView"
                            android:textSize="70px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" X "
                            android:id="@+id/waterView"
                            android:textSize="70px"/>
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>